@page
@model Tony.Web.Pages.Auth.LoginModel
@{
    Layout = "Shared/_Auth";
    ViewData["title"] = "Enter to site";
}

<form method="post" class=" login mt-4 pt-0">
    <div class="text-danger col-12" asp-validation-summary="All"></div>

    <div class="phone">
        <p style="right: 6%; bottom: 0px; color: rgba(51, 51, 51, 0.69); z-index: -1;">telephone numbers</p>
        <input type="text" class="form-control" asp-for="PhoneNumber">
    </div>
    <div class="password mt-5">
        <p>Password </p>
        <input type="password" class="form-control" asp-for="Password">
    </div>
    <div class="checkbox mt-4">
        <input type="checkbox" id="check1" value="true" asp-for="IsRememberMe">
        <span checkfor="check1">remember me</span>
    </div>
   
    <button class="btn btn-success btn-login  mt-4 d-flex justify-content-center align-items-center">
        <span>ورود</span>
        <i class="fa fa-chevron-left"></i>
    </button>
</form>
<div class="login-footer">
    <a href="#">
        <i class="zmdi zmdi-lock"></i>
        Password forget
    </a>
    <a asp-page="Register">
        <i class="zmdi zmdi-account-add"></i>
        register in site
    </a>
</div>
