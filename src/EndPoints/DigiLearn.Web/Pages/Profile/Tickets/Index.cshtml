@page
@using TicketModule.Data.Entities
@using Common.Application.DateUtil
@model Tony.Web.Pages.Profile.Tickets.IndexModel
@{
    ViewData["Title"] = "  tickets";
    Layout = "Shared/_ProfileLayout";
    var counter = 1;
}
<div class="row ">
    <div class="col-12 info shadow pl-0 pr-0">
        <p class="title">
            <i class="fa fa-paper-plane"></i>
            tickets
        </p>

        <br>
        <a asp-page="Add" class="btn btn-save mr-2 mb-4 float-right">register تیکت new</a>
        <div class="info-body p-2">
            <div class="table-responsive">
                <h5>
                    <i class="fa fa-list"></i>
                    ticket lists
                </h5>
                <table class="table   table-hover  table-striped text-center">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <td>Status</td>
                            <th>Register date</th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FilterResult.Data)
                        {
                            <tr>
                                <td>@counter</td>
                                <td>@item.Title</td>

                                <td>
                                    @switch (item.Status)
                                    {
                                        case TicketStatus.Pending:
                                            <span class="badge badge-info">In process</span>
                                            break;
                                        case TicketStatus.Answered:
                                            <span class="badge badge-success">responsed</span>
                                            break;
                                        case TicketStatus.Closed:
                                            <span class="badge badge-danger">close</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @item.CreationDate.ToPersianDate()
                                </td>
                                <td>
                                    <a asp-page="Show" asp-route-ticketId="@item.Id" class="btn btn-sm btn-primary">show</a>
                                </td>
                            </tr>
                            counter += 1;
                        }
                        @if (Model.FilterResult.EntityCount == 0)
                        {
                            <tr>
                                <td colspan="5">nothing for show</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <hr class="mt-0">
            <partial name="Shared/_Pagination" model="Model.FilterResult" />
        </div>
    </div>


</div>
