@page "{handler?}"
@using Common.Application.DateUtil
@model Tony.Web.Pages.Profile.NotificationsModel

@{
    ViewData["title"] = "messages";
    Layout = "Shared/_ProfileLayout";
}

<div class="info shadow pl-0 pr-0">
    <p class="title">
        <i class="zmdi zmdi-notifications text-warning"></i>
        @ViewData["title"]
        <delete-item is-button-tag="false" class="pull-left pointer" data-toggle="tooltip" title="Delete all"
                     url="@Url.Page("Notifications","DeleteAll")">
            <i class="fa fa-trash-o text-danger" style="font-size: 25px;"></i>
        </delete-item>

    </p>

    <div class="info-body ">
        <div class="table-responsive">
            <table class="table text-center  table-hover  table-striped text-center">
                <thead>
                    <tr>
                        <th>texts</th>
                        <th>Status</th>
                        <th>dates</th>
                        <td>
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FilterResult.Data)
                    {
                        <tr>
                            <td>
                                <p><b>@item.Title</b></p>
                                <div>
                                    @Html.Raw(item.Text)
                                </div>
                            </td>
                            <td>
                                @if (item.IsSeen)
                                {
                                    <span class="badge badge-success">visited</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">new</span>
                                }
                            </td>
                            <td>
                                @item.CreationDate.ToPersianDateTime()
                            </td>
                            <td>
                                @if (item.IsSeen == false)
                                {
                                    <form method="post" asp-page-handler="SeenNotification" class="d-inline-block">
                                        <input type="hidden" name="notificationId" value="@item.Id" />
                                        <button class="btn btn-success btn-sm" data-toggle="tooltip" title="" onclick="return confirm('are you sure')">
                                            <i class="fa fa-check text-white"></i>
                                        </button>
                                    </form>
                                }
                                <delete-item url="@Url.Page("Notifications", "DeleteNotification", new { id = item.Id })" data-toggle="tooltip" title="Delete" class=" btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i>
                                </delete-item>
                            </td>
                        </tr>
                    }
                    @if (Model.FilterResult.EntityCount == 0)
                    {
                        <tr>
                            <td colspan="4">nothing for show</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <partial name="Shared/_Pagination" model="Model.FilterResult" />
    </div>
</div>

