@page
@using Common.Application.DateUtil
@using CoreModule.Application._Utilities
@using CoreModule.Domain.Course.Enums
@using Common.Application
@model Tony.Web.Pages.Profile.Teacher.Courses.IndexModel
@{
    ViewData["Title"] = "course teacher";
    Layout = "Shared/_ProfileLayout";
}
<div class="row ">
    <div class="col-12 info shadow pl-0 pr-0">
        <p class="title">
            <i class="fa fa-paper-plane"></i>
            @ViewData["Title"]
        </p>
        <br>
        <a asp-page="Add" class="btn btn-save mr-2 mb-4 float-right">register course new</a>
        <div class="info-body p-2">
            <div class="table-responsive">
                <h5>
                    <i class="fa fa-list"></i>
                    course lists
                </h5>
                <table class="table  table-hover  table-striped text-center">
                    <thead>
                        <tr>
                            <th>picture</th>
                            <th>Title</th>
                            <th>Price</th>
                            <td>Status</td>
                            <th>Register date</th>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.FilterResult.Data)
                        {
                            <tr>
                                <td>
                                    <img src="@CoreModuleDirectories.GetCourseImage(item.ImageName)" style="max-width: 200px" />
                                </td>
                                <td>@item.Title</td>
                                <td>@item.Price.TooMan(true)</td>
                                <td>
                                    @switch (item.CourseStatus)
                                    {
                                        case CourseActionStatus.Pending:
                                            <span class="badge badge-info">In process</span>
                                            break;
                                        case CourseActionStatus.Active:
                                            <span class="badge badge-success">Active</span>
                                            break;
                                        case CourseActionStatus.DeActive:
                                            <span class="badge badge-danger">disableActive</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @item.CreationDate.ToPersianDate()
                                </td>
                                <td>
                                    <a asp-page="Sections/Index" asp-route-courseId="@item.Id" class="btn btn-sm btn-primary">Title Mangement</a>
                                </td>
                            </tr>
                        }
                        @if (Model.FilterResult.EntityCount == 0)
                        {
                            <tr>
                                <td colspan="5">nothing for show</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <hr class="mt-0">
            <partial name="Shared/_Pagination" model="Model.FilterResult" />
        </div>
    </div>


</div>

