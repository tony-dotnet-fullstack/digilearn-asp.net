@page
@using Common.Application
@using Common.Application.DateUtil
@using CoreModule.Domain.Course.Enums
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Tony.Web.Areas.Admin.Pages.Courses.IndexModel
@{
    ViewData["title"] = "managment course ";
    ViewData["selected"] = "courses_index";
}
<form class="card mb-2">
    <div class="card-header mb-0 pb-0 d-flex justify-content-between">
        <h5>Filter</h5>
        <div class="">
            <a asp-page="Index" class="btn btn-sm btn-danger">delet filter</a>
            <button type="submit" class="btn btn-success btn-sm">اdo filter</button>
        </div>
    </div>
    <div class="card-body  mb-0">
        <div class="row">
            <div class="col-md-6">
                <label>Status</label>
                <select class="form-control" asp-for="FilterParams.ActionStatus">
                    <option value="null">all</option>
                    <option value="@CourseActionStatus.Active">Active</option>
                    <option value="@CourseActionStatus.DeActive">disableActive</option>
                    <option value="@CourseActionStatus.Pending">In process</option>
                </select>
            </div>
        </div>
    </div>
</form>
<div class="card ">
    <div class="table-responsive card-body p-0 mb-0">
        <table class="table table-bordered table-hover mb-0">
            <thead>
            <tr>
                <th>Title</th>
                <th>Slug</th>
                <th>Price</th>
                <th>Status</th>
                <th>Register date</th>
                <th>operation</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.FilterResult.Data)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Slug</td>
                    <td>@item.Price.TooMan(true)</td>
                    <td>
                        @switch (item.CourseStatus)
                        {
                            case CourseActionStatus.Pending:
                                <span class="badge badge-info">In process</span>
                                break;
                            case CourseActionStatus.Active:
                                <span class="badge badge-success">Active</span>
                                break;
                            case CourseActionStatus.DeActive:
                                <span class="badge badge-danger">disableActive</span>
                                break;
                        }
                    </td>
                    <td>@item.CreationDate.ToPersianDateTime()</td>
                    <td>
                        <a asp-page="Edit" asp-route-courseId="@item.Id" class="btn btn-primary">Edit</a>
                        <a asp-page="Sections/Index" asp-route-courseId="@item.Id" class="btn  btn-warning">Title Mangement</a>
                    </td>
                </tr>
            }
         
            </tbody>
        </table>
    </div>
</div>
<partial name="_Pagination" model="Model.FilterResult"/>
