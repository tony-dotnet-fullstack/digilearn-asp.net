@page
@using Common.Application.DateUtil
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using TicketModule.Data.Entities
@model Tony.Web.Areas.Admin.Pages.Tickets.IndexModel
@{
    ViewData["title"] = "ticket managment";
    ViewData["selected"] = "tickets";
}

<form class="card mb-2">
    <div class="card-header mb-0 pb-0 d-flex justify-content-between">
        <h5>Filter</h5>
        <div class="">
            <a asp-page="Index" class="btn btn-sm btn-danger">delet filter</a>
            <button type="submit" class="btn btn-success btn-sm">اdo filter</button>
        </div>
    </div>
    <div class="card-body  mb-0">
        <div class="row">
            <div class="col-md-6">
                <label>Title</label>
                <input type="text" class="form-control" asp-for="FilterParams.Title" />
            </div>
            <div class="col-md-6">
                <label>Status</label>
                <select class="form-control" asp-for="FilterParams.Status">
                    <option value="null">all</option>
                    <option value="@TicketStatus.Closed">close</option>
                    <option value="@TicketStatus.Answered">responsed</option>
                    <option value="@TicketStatus.Pending">In process</option>
                </select>
            </div>
        </div>
    </div>
</form>
<div class="card ">
    <div class="table-responsive card-body p-0 mb-0">
        <table class="table table-bordered table-hover mb-0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Name and Family</th>
                    <th>Register date</th>
                    <th>Status</th>
                    <th>operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.FilterResult.Data)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.OwnerFullName</td>
                        <td>@item.CreationDate.ToPersianDateTime()</td>
                        <td>
                            @switch (item.Status)
                            {
                                case TicketStatus.Pending:
                                    <span class="badge badge-info">In process</span>
                                    break;
                                case TicketStatus.Answered:
                                    <span class="badge badge-success">responsed</span>
                                    break;
                                case TicketStatus.Closed:
                                    <span class="badge badge-danger">close</span>
                                    break;
                            }
                        </td>
                        <td>
                            <a asp-page="Show" asp-route-id="@item.Id" class="btn btn-primary">show</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<partial name="_Pagination" model="Model.FilterResult" />
